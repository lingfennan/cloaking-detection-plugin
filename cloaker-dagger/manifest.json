{
  "manifest_version": 2,
  "name": "Cloaking Fighter",
  "description": "This extension examines whether current page is cloaking or not",
  "version": "1.0",
  "browser_action": {
    "default_icon": "res/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "md5.js",
      "helper_functions.js",
      "simhash_computer.js",
      "cloaking_checker.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-2.1.3.min.js",
        "md5.js",
        "helper_functions.js",
        "simhash_computer.js",
        "tab_inspector.js"
      ],
      "run_at": "document_end"
    }
  ]
}
